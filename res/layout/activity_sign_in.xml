<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgfood"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/food"
                    app:tint="#532E03" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:letterSpacing="0.2"
                    android:text="Yummy Foods"
                    android:textColor="#532E03"
                    android:textSize="40dp" />

                <EditText
                    android:id="@+id/textphone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_call_24"
                    android:background="@drawable/background_edittext"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="+91 * * * * * * * * * *"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/textpassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
                    android:background="@drawable/background_edittext"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="* * * * * * * *"
                    android:inputType="textPassword" />

                <Button
                    android:id="@+id/btnregister"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#7A6042"
                    android:fontFamily="serif"
                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    app:cornerRadius="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtorwith"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="- - - - - - - - - -  Or With  - - - - - - - - - -" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtfacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/fbback"
                        android:drawableLeft="@drawable/facebook"
                        android:gravity="center"
                        android:text="Facebook"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/txtgoogle"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/googleback"
                        android:drawableLeft="@drawable/google"
                        android:gravity="center"
                        android:text="Google"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtdont"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="Don't have an account ? Register"
                    android:textColor="@color/black" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>